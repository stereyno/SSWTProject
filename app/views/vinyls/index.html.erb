<p id="notice"><%= notice %></p>

<h1>Vinyls</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Release date</th>
      <th>Label</th>
      <th>Description</th>
      <th>Tracklist</th>
      <th>Album</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vinyls.each do |vinyl| %>
      <tr>
        <td><%= vinyl.artist %></td>
        <td><%= vinyl.title %></td>
        <td><%= vinyl.genre %></td>
        <td><%= vinyl.release_date %></td>
        <td><%= vinyl.label %></td>
        <td><%= vinyl.description %></td>
        <td><%= vinyl.tracklist %></td>
        <td><%= vinyl.album %></td>
        <td><%= vinyl.image_url %></td>
        <td><%= vinyl.price %></td>
        <td><%= link_to 'Show', vinyl %></td>
        <td><%= link_to 'Edit', edit_vinyl_path(vinyl) %></td>
        <td><%= link_to 'Destroy', vinyl, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

